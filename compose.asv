function I = compose(message)
    len = length(message);
    section = sqrt(len/8);
    I = zeros(section);
    for i = 1:section
        for j = 1:section
            for k = 1:3
                begin = ((i-1)*section + (j -1)*)*8 + 1;
                data = message(begin:begin+7);
                tempBin = bin2dec(num2str(data));
                I(i, j, k) = tempBin;
            end
        end
    end
    disp('showing the hidden picture!')